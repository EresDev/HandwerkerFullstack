{% use "form/parent-form-theme.html.twig" %}

{%- block form_row -%}
    {%- set row_attr = row_attr|merge({class: (attr.class|default('field'))|trim}) -%}
    {{- parent() -}}
{%- endblock form_row -%}

{% block button_widget -%}
    {%- set attr = attr|merge({class: (attr.class|default('alt'))|trim}) -%}
    <ul class="actions">
        <li>
            {{- parent() -}}
        </li>
    </ul>
{%- endblock button_widget %}

{%- block form_errors -%}
    {%- if errors|length > 0 -%}
        <ul class="formErrors">
            {%- for error in errors -%}
                <li>{{ error.message|trans }}</li>
            {%- endfor -%}
        </ul>
    {%- endif -%}
{%- endblock form_errors -%}
